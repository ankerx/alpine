<!-- templates/snippets/product-card.liquid -->
<div class="bg-white flex flex-col overflow-hidden">
    <div class="relative w-full h-[320px] flex items-center justify-center bg-white">
        <img :src="rec.image" :alt="rec.name" class="object-contain h-full w-full" />
        <span class="absolute top-4 left-4 px-3 py-1 text-xs font-bold border border-gray-300 rounded bg-white tracking-widest z-10" style="letter-spacing:0.08em; color:#222;">BEST SELLER</span>
    </div>
    <div class="flex flex-col gap-1 px-6 py-4">
        <div class="text-black text-lg uppercase" x-text="rec.name"></div>
        <div class="text-gray-900 text-[16px] font-bold mt-1" x-text="formatPrice(rec.price)"></div>
        <div class="text-gray-500 text-[12px] font-normal mt-2">10 colors</div>
    </div>
</div>