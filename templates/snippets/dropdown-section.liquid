<!-- templates/snippets/dropdown-section.liquid -->
<div class="border-b border-gray-200">
    <button @click="open[{{ index }}]=!open[{{ index }}]" class="w-full flex justify-between items-center py-4 text-left focus:outline-none">
        <span class="text-base font-semibold tracking-wide uppercase">{{ title }}</span>
        <span class="text-2xl"> <span x-text="open[{{ index }}] ? '-' : '+'"></span> </span>
    </button>
    <div x-show="open[{{ index }}]" class="pb-4 text-gray-700 text-sm overflow-hidden" 
         x-transition:enter="transition-all ease-out duration-300"
         x-transition:enter-start="opacity-0 max-h-0 transform -translate-y-2"
         x-transition:enter-end="opacity-100 max-h-96 transform translate-y-0"
         x-transition:leave="transition-all ease-in duration-200"
         x-transition:leave-start="opacity-100 max-h-96 transform translate-y-0"
         x-transition:leave-end="opacity-0 max-h-0 transform -translate-y-2">
        <div x-show="!loading">
            {{ content }}
        </div>
        <div x-show="loading" class="text-gray-500">Loading...</div>
    </div>
</div> 